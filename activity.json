{
  "name": "Twitter Publish",
  "version": "0.0.1",
  "type": "flogo:activity",
  "ref": "github.com/adireddevil/Flogo-twitter",
  "description": "This activity allows you to publish using your twitter id",
  "author": "AllStars",
  "inputs":[
    {
		"name": "consumerKey",
		"type": "string",
    "required": true
	},
	{
		"name": "consumerSecret",
		"type": "string",
      "required": true

	},
	{
		"name": "accessToken",
		"type": "string",
      "required": true

	},
	{
		"name": "accessTokenSecret",
		"type": "string",
      "required": true

	}, {
		"name": "twitterFunction",
		"type": "string",
    "allowed": [
        "Tweet",
        "ReTweet",
		"Block",
		"Unblock",
		"Follow",
		"Unfollow",
    "DM"
      ],
      "value": "Tweet",
      "required": true
	},
    {
      "name": "user",
      "type": "string"


    },
	{
		"name": "text",
		"type": "string"


	}

  ],
  "outputs": [
    {
      "name": "statusCode",
      "type": "string"
    },
    {
      "name": "message",
      "type": "any"
    }
  ]
}
